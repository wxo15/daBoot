@model IEnumerable<daBoot.Models.Item>


<div class="container p-3">
    <div class="text-center">
        <h1 class="display-4">Items</h1>
    </div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="Create">Create new item</a>
        </div>
    </div>

    @if (Model.Count() > 0) {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="25%">@item.ItemName</td>
                    <td width="25%">@item.Borrower</td>
                    <td width="25%">@item.Lender</td>
                    <td width="25%" class="w-100 btn-group" role="group">
                        <a class="btn btn-info mx-1" asp-area="" asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                        <a class="btn btn-danger mx-1" asp-area="" asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    } else {
        <p>No items to display.</p>
    }
</div>