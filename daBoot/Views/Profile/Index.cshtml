@model daBoot.Models.Account


<div class="container p-3">
    @if (Model != null){
        <div class="row m-3" style="text-align:center;">
            <img class="center" src=@Model.ProfilePicURL alt="profile pic" style="object-fit: cover; width: 30vh; height: 30vh; overflow: hidden; border-radius: 15vh; background-color: white; display: block; margin-left: auto; margin-right: auto;">
        </div>
        <div class="row col-6 offset-3">
            <form action="/" method="get" style="text-align:center; width:100%; margin:auto">
                <small class="form-text">ID</small>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" value=@Model.Id disabled />
                </div>
                <small class="form-text">Username</small>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">@@</span>
                    </div>
                    <input type="text" class="form-control" id="username" name="username" value=@Model.Username aria-label="Username" aria-describedby="basic-addon1" disabled />
                </div>
                @if (User.Identity.IsAuthenticated && User.Claims.FirstOrDefault(c => c.Type == "username").Value == Model.Username)
                {
                    <small class="form-text">First Name</small>
                    <div class="input-group mb-3">
                        <input type="text" id="firstname" name="firstname" class="form-control" value=@Model.FirstName />
                    </div>
                    <small class="form-text">Last Name</small>
                    <div class="input-group mb-3">
                        <input type="text" id="lastname" name="lastname" class="form-control" value=@Model.LastName />
                    </div>
                    <small class="form-text">Email Address</small>
                    <div class="input-group mb-3">
                        <input type="text" id="email" name="email" class="form-control" value=@Model.EmailAddress />
                    </div>
                    <small class="form-text">Profile Picture URL</small>
                    <div class="input-group mb-3">
                        <input type="text" id="profpic" name="profpic" class="form-control" value=@Model.ProfilePicURL />
                    </div>
                    <div class="input-group mb-3">
                        <input type="submit" class="btn btn-success" value="Update" />
                    </div>
                }
                else
                {
                    <small class="form-text">First Name</small>
                    <div class="input-group mb-3">
                        <input type="text" id="firstname" name="firstname" class="form-control" value=@Model.FirstName disabled />
                    </div>
                    <small class="form-text">Last Name</small>
                    <div class="input-group mb-3">
                        <input type="text" id="lastname" name="lastname" class="form-control" value=@Model.LastName disabled />
                    </div>
                    <small class="form-text">Email Address</small>
                    <div class="input-group mb-3">
                        <input type="text" id="email" name="email" class="form-control" value=@Model.EmailAddress disabled />
                    </div>
                    <small class="form-text">Profile Picture URL</small>
                    <div class="input-group mb-3">
                        <input type="text" id="profpic" name="profpic" class="form-control" value=@Model.ProfilePicURL disabled />
                    </div>
                }
            </form>
            @if (User.Identity.IsAuthenticated && User.Claims.FirstOrDefault(c => c.Type == "username").Value != Model.Username)
            {
                @if (ViewData["IsFriend"] == null)
                {
                    <form action="/addteammember?userid=@Model.Id" method="post" style="text-align:center; width:100%; margin:auto">
                        <div class="input-group mb-3">
                            <input type="submit" class="btn btn-success" value="Add as Team Member" />
                        </div>
                    </form>
                }
                else
                {
                    <form action="/rmvteammember?userid=@Model.Id" method="post" style="text-align:center; width:100%; margin:auto">
                        <div class="input-group mb-3">
                            <input type="submit" class="btn btn-secondary" value="Remove Team Member" />
                        </div>
                    </form>
                }
            }

        </div>
    }
    else
    {
        <h1>404 - No profile found.</h1>
    }
</div>
